  <%= form_for @workshop, html: {class: 'form-horizontal'} do |f| %>  
  <div class="form-group">
    <%= f.label :name, 'Nazwa', class: 'col-sm-2 col-md-4 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: 'col-md-4 form-control', placeholder: "Wpisz nazwę" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Opis', class: 'col-sm-2 col-md-4 control-label' %>
    <div class="col-sm-4">
      <%= f.text_area :description, class: 'col-md-4 form-control', placeholder: "Wpisz informacje dotyczące usługi" %>
    </div>
  </div>  
  <div class="form-group">
    <%= f.label :price, 'Cena', class: 'col-sm-2 col-md-4 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :price, class: 'col-md-4 form-control', placeholder: "Wpisz cenę wizyty" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :shortcut, 'Skrót', class: 'col-sm-2 col-md-4 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :shortcut, class: 'col-sm-3 col-md-4 form-control', placeholder: "Wpisz skrót usługi" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-4 col-md-6">
      <%= f.submit 'ZAPISZ', class: "btn btn-primary" %>
      <%= link_to 'ANULUJ', workshops_path, class: 'btn btn-default' %>
    </div>
  </div>  
<% end %>