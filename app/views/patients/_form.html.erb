
<%= form_for @patient, html: {class: 'form-horizontal'} do |f| %>
<%= f.error_messages :header_message => "Nieprawidłowo wypełnione pola!",
:message => "Popraw następujące pola:",
  :header_tag => :h3 %>  

  <div class="form-group">

    <%= f.label :name, 'Imie', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: 'form-control', placeholder: "Wpisz imię" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :surname, 'Nazwisko', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :surname, class: 'form-control', placeholder: "Wpisz nazwisko" %>
    </div>
  </div>  
  <div class="form-group">
    <%= f.label :pesel, 'Pesel', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :pesel, class: 'form-control', placeholder: "Wpisz pesel pacjenta" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :birthdate, 'Data urodzenia', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
<!--      <%= f.text_field :birthdate, class: 'form-control', placeholder: "Podaj date urodzenia" %>-->
      <%= f.date_select :birthdate, {:start_year=>1900, :include_blank => true}, class: 'form-control input-sm' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sex, 'Płeć', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.select :sex, %w{ Mężczyzna Kobieta }, {:include_blank => true}, class: 'form-control input-sm' %>
    </div>
  </div>
<div class="form-group">
  <%= f.label :phone, 'Telefon', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :phone, class: 'form-control', placeholder: "Podaj numer telefonu" %>
    </div>
  </div>
<div class="form-group">
  <%= f.label :email, 'E-mail', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :email, class: 'form-control', placeholder: "Podaj e-mail" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'ZAPISZ', class: "btn btn-primary" %>
      <%= link_to 'ANULUJ', patients_path, class: 'btn btn-default' %>
    </div>
  </div>
      
<!--</form>-->
<% end %>